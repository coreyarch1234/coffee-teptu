<p id="notice"><%= notice %></p>
<div class="result-wrapper col-md-8 col-md-offset-2">
  <table class="table table-filter">
    <tbody>
      <tr>
        <td>
          <div class="media">
            <div class="col-md-2">
              <%= link_to image_tag('https://s3.amazonaws.com/uifaces/faces/twitter/fffabs/128.jpg'), @user, :class=>"pull-left"%>
            </div>
            <div class="col-md-10">
              <h3><%= "#{@user.first_name} #{@user.last_name}" %></h3>
              <!-- <h4>Title: <%= @user.title %></h4> -->
              <h3>Title</h3>
              <hr />
              <h4>About</h4>
              <p><%= @user.about_me %></p>
              <hr />
              <h4>Contact</h4>
              <p><%= @user.contact %></p>
              <% current_user.projects.each do |p| %>
                <hr />
                <%= p.title %>
              <% end %>
              <p><%= link_to 'Add a Project', new_user_project_path(@user) %></p>
              <%= link_to 'Back', users_path %>
              <% if current_user == @user %>
                <%= link_to 'Edit', edit_user_path(@user) %>
              <% end %>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<div>

<style>
    /*Profile Picture Movement Up*/
    .col-md-2{
        margin-right: 50px;
    }

    /*About Me Movement Down*/
    .col-md-10 > h4{
        margin-top: 30px;
    }


</style>
