<%= form_for(@user) do |f| %>

<div class="page-header", id="new-field-text">
     <div  style="margin-bottom: 0; ">
         <br>
         <div ><%= f.text_field :coffee_title, placeholder: "Title", style: "background-color: white; width: 30%;  margin: 8px 0; padding: 12px 20px; height: 20px; color: black; font-family: 'Helvetica';  font-size: 15px; display: inline-block; box-sizing: border-box; border-radius: 4px; border: 1px solid #ccc;" %></div>
    </div>
</div>

<div class="page-header", id="new-field-text">
     <div  style="margin-bottom: 0; ">
         <br>
         <div ><%= f.text_field :first_name, placeholder: "Name", style: "background-color: white; width: 30%; margin: 8px 0; padding: 12px 20px; height: 20px; color: black; font-family: 'Helvetica';  font-size: 15px; display: inline-block; box-sizing: border-box; border-radius: 4px; border: 1px solid #ccc;" %></div>
    </div>
</div>


    <div class="page-header", id="new-field-text">
         <div  style="margin-bottom: 0; ">
             <br>
             <div ><%= f.text_field :email, placeholder: "Email", style: "background-color: white; width: 30%; margin: 8px 0; padding: 12px 20px; height: 20px; color: black; font-family: 'Helvetica';  font-size: 15px; display: inline-block; box-sizing: border-box; border-radius: 4px; border: 1px solid #ccc;" %></div>
        </div>
    </div>

    <div class="page-header", id="new-field-text">
         <div  style="margin-bottom: 0; ">
             <br>
             <div ><%= f.text_area :about_me, placeholder: "Talk about yourself.", style: "height: 300px;background-color: white; width: 30%; margin: 8px 0; padding: 12px 20px; height: 20px; color: black; font-family: 'Helvetica';  font-size: 15px; display: inline-block; box-sizing: border-box; border-radius: 4px; border: 1px solid #ccc;" %></div>
        </div>
    </div>

    <div class="page-header", id="new-field-text">
         <div  style="margin-bottom: 0; ">
             <br>
             <div ><%= f.text_field :contact, placeholder: "LinkedIn", style: "background-color: white; width: 30%; margin: 8px 0; padding: 12px 20px; height: 20px; color: black; font-family: 'Helvetica';  font-size: 15px; display: inline-block; box-sizing: border-box; border-radius: 4px; border: 1px solid #ccc;" %></div>
        </div>
    </div>

    <div class="actions">
      <%= f.submit class: "button-secondary"%>
    </div>
  <% end %>

  <style>

      .button-secondary{
        width: 30%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
  </style>
