<%= form_for(@user) do |f| %>

    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :class=>"form-control" %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, :class=>"form-control" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, :class=>"form-control" %>
    </div>

    <div class="field">
      <%= f.label :about_me %>
      <%= f.text_field :about_me, :class=>"form-control" %>
    </div>

    <div class="field">
      <%= f.label :contact %>
      <%= f.text_field :contact, :class=>"form-control" %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
