<% provide(:title, "Log in") %>

<div class="signup-wrapper" >
<%= form_for(:session, url: login_path) do |f| %>

  <p>New user? <%= link_to "Sign up now!", new_user_path %></p>

  <div class="field">
    <div ><%= f.text_field :email, placeholder: "Email", style: " background-color: white; width: 30%; margin: 8px 0; padding: 12px 20px; height: 20px; color: black; font-family: 'Helvetica'; font-size: 15px; display: inline-block; box-sizing: border-box; border-radius: 4px; border: 1px solid #ccc;"  %></div>
  </div>

  <div class="field">
    <div ><%= f.password_field :password, placeholder: "Password", style: " background-color: white; width: 30%; margin: 8px 0; padding: 12px 20px; height: 20px; color: black; font-family: 'Helvetica'; font-size: 15px; display: inline-block; box-sizing: border-box; border-radius: 4px; border: 1px solid #ccc;"  %></div>
  </div>

  <div class="actions">
    <%= f.submit 'Next', class: "button-secondary" %>
  </div>

  <% end %>

  </div>

  <style>

    .button-secondary{
      width: 30%;
      background-color: #4CAF50;
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .log-in-wrapper{
        left: 30px;
        top: 30%;
    }
  </style>
