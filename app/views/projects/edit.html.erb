<%= form_for [current_user, @project] do |p| %>
    <div class="page-header", id="new-field-text">
         <div class="jumbotron" style="margin-bottom: 0; ">
             <br>
             <div ><%= p.text_field :title, placeholder: "Product title", style: "background-color: transparent; width: 100%; height: 100px; color: black; font-family: 'Bungee'; font-size: 25px;" %></div>
             <hr>
        </div>
    </div>


    <div class="">
        <br>
        <div class="panel panel-default">
          <div class="panel-heading">
               <h3 class="panel-title">Description</h3>
          </div>
            <div ><%= p.text_field :description, placeholder: "Description", style: "background-color: transparent; width: 100%; height: 100px; color: black; font-family: 'Bungee'; font-size: 20px;" %></div>
        </div>
        <hr>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Resources</h3>
          </div>
            <div ><%= p.text_field :tools, placeholder: "Resources", style: "background-color: transparent; width: 100%; height: 100px; color: black; font-family: 'Bungee'; font-size: 20px;" %></div>
        </div>
        <%= p.submit "Submit", class: "button-secondary" %>
    </div>
    <% end %>

    <style>

        .button-secondary{
          width: 30%;
          background-color: #4CAF50;
          color: white;
          padding: 14px 20px;
          margin: 8px 0;
          border: none;
          border-radius: 4px;
          cursor: pointer;
        }
    </style>
